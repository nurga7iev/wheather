<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTheme" parent="@android:style/Theme.Holo.Light"></style>

    <style name="CustomTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/productsans</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/productsans</item>
        <item name="android:textColor">@color/textButtonPurple</item>
    </style>

    <style name="ProgressBar" parent="@style/Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:max">100</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="trackThickness">24dp</item>
        <item name="indicatorColor">@color/backgroundPurpleSecond</item>
        <item name="trackColor">@color/white</item>
        <item name="trackCornerRadius">100dp</item>
        <item name="indicatorTrackGapSize">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CircleImageButton">
        <item name="android:background">@drawable/block_transparent_circle</item>
        <item name="android:theme">@android:style/ThemeOverlay.Material.Dark</item>
        <item name="android:foreground">@drawable/ripple_circle</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>